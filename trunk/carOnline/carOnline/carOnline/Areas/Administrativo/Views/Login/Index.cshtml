@{
    Layout = null;
}

<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html lang="en-US" dir="ltr" xmlns="http://www.w3.org/1999/xhtml" style="">
<head>
    <meta content="text/html; charset=UTF-8" http-equiv="Content-Type">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Car-Online</title>
    
    <link href="@Url.Content("~/Areas/Administrativo/Content/css/1140.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Areas/Administrativo/Content/css/styles.css")" rel="stylesheet" type="text/css" />
    
    <!--<link media="screen" type="text/css" href="_themes/default.css" rel="stylesheet"></link>-->
    <script src="@Url.Content("~/Areas/Administrativo/Scripts/css3-mediaqueries.js")" type="text/javascript"></script>


    
</head>

<body class="texture">
    <div class="container">
		<div class="row">
			<div class="panel-wrapper panel-login">
				<div class="panel">
					<div class="title">
						<h4>Login</h4>
					</div>
					<div class="content">
						@using (Html.BeginForm("ValidarLogin", "Login", new { area = "Administrativo" }, FormMethod.Post))
                        {
							<div>
								<label for="email">E-mail:</label>
								@Html.TextBox("emailAdministrador")
							</div>
							<div>
								<label for="senha">Senha:</label> 
                                @Html.Password("senhaAdministrador")
							</div>
							<div>
								<input type="submit" value="Logar" class="button-red submit" />
							</div>
                        }
					</div>
				</div>
				<div class="shadow"></div>
			</div>
		</div>
    </div>
</body>
</html>