<script type="text/javascript">
    //Diogo - Modal
    $(document).ready(function () {
        $(function () {
            $("#modalMenssagem").dialog({
                modal: true,
                buttons: {
                    Ok: function () {
                        $(this).dialog("close");
                    }
                }
            });
        });
    });
