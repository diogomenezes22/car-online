@model carOnline.Models.tblFuncionario

@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Areas/Administrativo/Views/Shared/_LayoutAreaAdministrativa.cshtml";
}
<br />
<br />

<div id="areaCadastroFuncionario">
    <p class="mensagemRetorno">@TempData["mensagemRetorno"]</p>
    <br />
    <p class="titulo">Cadastro de Funcionário</p>
    <br />
    @using (Html.BeginForm("Cadastrar", "Funcionario", new { area = "Administrativo" }, FormMethod.Post, new {@class="formularioCadastroFuncionario" }))
    {
        <input type="hidden" class="urlBuscarCidade" value="@Url.Action("BuscarCidade", "Funcionario", new { area = "Administrativo" })" />
        <p><label for="nome" class="label">Nome  :</label>@Html.TextBoxFor(m => m.nome, new { @class = "campoTexto campoNomeFuncionario", maxlength = "60", size = "40" })<span class="campoObrigatorio"  title="Este campo é obrigatório!">*</span></p>
        <p><label for="email" class="label">Email :</label>@Html.TextBoxFor(m => m.email, new { @class = "campoTexto campoEmailFuncionario", maxlength = "60", size = "40" })<span class="campoObrigatorio"  title="Este campo é obrigatório!">*</span></p>
        <p><label for="senha" class="label">Senha :</label>@Html.PasswordFor(Model => Model.senha, new { @class = "campoTexto campoSenhaFuncionario", maxlength = "8" })<span class="campoObrigatorio" title="Este campo é obrigatório!">*</span></p>
        <p><label for="telefone"  class="label">Telefone :</label>@Html.TextBoxFor(m => m.telefone, new { @class = "TELEFONE campoTexto" })</p>
        <p><label for="celular" class="label">Celular  :</label>@Html.TextBoxFor(m => m.celular, new { @class = "NOVO_FORMATO_TELEFONE campoTexto" })</p>
        <p><label for="endereco" class="label">Endereço  :</label>@Html.TextBoxFor(m => m.endereco, new { @class = "campoTexto campoEnderecoFuncionario" })<span class="campoObrigatorio"  title="Este campo é obrigatório!">*</span></p>
        <p><label for="bairro" class="label">Bairro  :</label>@Html.TextBoxFor(m => m.bairro, new { @class = "campoTexto campo campoBairroFuncionario" })<span class="campoObrigatorio"  title="Este campo é obrigatório!">*</span></p>
        <p><label for="TipoPermissao" class="label">Permissão  :</label>@Html.DropDownList("TipoPermissao", null, new { @class = "campoTexto" })</p>
        <p><label for="Cargos" class="label">Cargo  :</label>@Html.DropDownList("Cargos", null, new { @class = "campoTexto" })</p>
        <p><label for="Paises" class="label">País  :</label>@Html.DropDownList("Paises", null, new { @class = "campoTexto" })</p>
        <p><label for="Estados" class="label">Estado  :</label>@Html.DropDownList("Estados", null, new { @class = "campoTexto" })</p>
        <p>
            <label for="Cidades" class="label">Cidade  :</label>
            @Html.DropDownList("Cidades", null, new { @class = "listaCidades campoTexto" })
            @*<select class="listaCidades campoTexto" id="Cidades campoCidadeFuncionario" name="Cidades">
            </select>*@
            <span class="campoObrigatorio"  title="Este campo é obrigatório!">*</span>
        </p>
        <br />
        <br />
        <p><input type="submit" value="Cadastrar" class="botao" /><input type="reset" class="botaoLimparCidades botao" value="limpar" /></p>
    }
</div>
<br />
<br /> 